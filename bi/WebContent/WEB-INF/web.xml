<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>bi</display-name>

	<welcome-file-list>
		<welcome-file>index.xhtml</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<!-- Parametros de upload -->
	<context-param>
		<param-name>upload_path</param-name>
		<param-value>img/upload/</param-value>
	</context-param>

	<!-- ParÃ¢metros do banco de dados -->
	<context-param>
		<param-name>servidor</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>banco</param-name>
		<param-value>bi_db</param-value>
	</context-param>
	<context-param>
		<param-name>usuario</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>senha</param-name>
		<param-value>root</param-value>
	</context-param>
	
</web-app>